    <!--LEFT SIDE-->
    <div class="row" style="margin-left:2%;">
        <div class="col">
            <form action="EditCoffe" method="post">

                <div class="mb-3">
                    <label for="ID" class="form-label">Please choose the Coffe ID</label>
                    <input type="number" class="form-control" id="ID" name="ID" value="@Model.coffe.ID">
                    <h4> <i class="fas fa-exclamation-circle"></i>@Html.ValidationMessageFor(x => x.coffe.ID)</h4>


                </div>


                <br />
                <hr />
                <h1>Now input Only the Fields you want to Change</h1>
                <hr />
                <br />

                <div class="mb-3">
                    <label for="CoffeName" class="form-label">New Name</label>
                    <input type="text" class="form-control" id="CoffeName" name="CoffeName" value="">
                    <h4> <i class="fas fa-exclamation-circle"></i>@Html.ValidationMessageFor(x => x.coffe.CoffeName)</h4>


                </div>
                <div class="mb-3">
                    <label for="prise" class="form-label">New Price</label>
                    <input type="number" class="form-control" id="prise" value="" name="Price">
                    <h4> <i class="fas fa-exclamation-circle"></i>@Html.ValidationMessageFor(x => x.coffe.Price)</h4>

                </div>

                <div class="mb-3">
                    <label for="bprice" class="form-label">New busines Price</label>
                    <input type="number" class="form-control" id="bprice" name="BPrice" value="">
                    <h4> <i class="fas fa-exclamation-circle"></i>@Html.ValidationMessageFor(x => x.coffe.BPrice)</h4>


                </div>

                <div class="mb-3">
                    <label for="AgeLimit" class="form-label">New Age Limit</label>
                    <input type="number" class="form-control" id="AgeLimit" name="AgeLimit" value="">
                    <h4> <i class="fas fa-exclamation-circle"></i>@Html.ValidationMessageFor(x => x.coffe.AgeLimit)</h4>


                </div>

                <div class="mb-3">
                    <label for="avlilable" class="form-label">avlilable ( 1 or 0 )</label>
                    <input type="number" class="form-control" id="avlilable" name="avlilable" value="">
                    <h4> <i class="fas fa-exclamation-circle"></i>@Html.ValidationMessageFor(x => x.coffe.avlilable)</h4>


                </div>

                <div class="mb-3">
                    <label for="imgName" class="form-label">New imgage path ( /IMG/PICTURE_NAME.END)</label>
                    <input type="text" class="form-control" id="imgName" name="imgName" value="">
                    <h4> <i class="fas fa-exclamation-circle"></i>@Html.ValidationMessageFor(x => x.coffe.imgName)</h4>


                </div>

                <div class="mb-3">
                    <label for="isBusiness" class="form-label">Business lunch ( 1 or 0 )</label>
                    <input type="text" class="form-control" id="isBusiness" name="isBusiness" value="">
                    <h4> <i class="fas fa-exclamation-circle"></i>@Html.ValidationMessageFor(x => x.coffe.isBusiness)</h4>


                </div>


                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck2">
                    <label class="form-check-label" for="exampleCheck2">I accept the terms</label>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <br />


                <br />
            </form>
        </div>

        <!--RIGHT SIDE-->
        <div class="col">
            <div class="row">

                @foreach (CoffeClass coffe in Model.Products)
                {
                    <div class="col-lg-3">
                        <div class="card" style="width: 18rem;">
                            <img src="@coffe.imgName" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">@coffe.CoffeName</h5>
                                <p class="card-text">
                                    ID : @coffe.ID <br />
                                    Price : @coffe.Price <br />
                                    BPrice : @coffe.BPrice <br />
                                    AgeLimit : @coffe.AgeLimit <br />
                                    avlilable : @coffe.avlilable <br />
                                    isBusiness : @coffe.isBusiness <br />

                                </p>
                                <a href="#" class="btn btn-primary">Go somewhere</a>
                            </div>
                        </div>
                    </div>

                }
            </div>



