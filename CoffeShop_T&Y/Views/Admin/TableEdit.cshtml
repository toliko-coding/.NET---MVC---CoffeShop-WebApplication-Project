    <div class="row" style="margin-left:2%;">
        <div class="col">
            <form action="EditTable" method="post">

                <div class="mb-3">
                    <label for="ID" class="form-label">Select Table By ID</label>
                    <input type="text" class="form-control" id="ID" name="ID" value="@Model.Table.ID">
                    <h4> <i class="fas fa-exclamation-circle"></i>@Html.ValidationMessageFor(x => x.Table.ID)</h4>
                </div>

                <br />
                <br />
                <hr />
                <h1>Now input Only the Fields you want to Change</h1>
                <hr />
                <br />
                <br />

                <div class="mb-3">
                    <label for="Seats" class="form-label">New Seats to the Table (1 - 99)</label>
                    <input type="text" class="form-control" id="Seats" name="Seats" value="@Model.Table.Seats">
                    <h4> <i class="fas fa-exclamation-circle"></i>@Html.ValidationMessageFor(x => x.Table.Seats)</h4>
                </div>

                <div class="mb-3">
                    <label for="Dicription" class="form-label">New Discription to the table</label>
                    <input type="text" class="form-control" id="Dicription" value="@Model.Table.Dicription" name="Dicription">
                    <h4> <i class="fas fa-exclamation-circle"></i>@Html.ValidationMessageFor(x => x.Table.Dicription)</h4>

                </div>

                <div class="mb-3">
                    <label for="Free" class="form-label">Availibale ? </label>
                    <input type="text" class="form-control" id="Free" value="@Model.Table.Dicription" name="Free">
                    <h4> <i class="fas fa-exclamation-circle"></i>@Html.ValidationMessageFor(x => x.Table.Free)</h4>

                </div>

                <div class="mb-3">
                    <label for="Inside" class="form-label">Inside = 1 Outsize = 0  </label>
                    <input type="text" class="form-control" id="Inside" value="@Model.Table.Dicription" name="Inside">
                    <h4> <i class="fas fa-exclamation-circle"></i>@Html.ValidationMessageFor(x => x.Table.Inside)</h4>

                </div>




                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck2">
                    <label class="form-check-label" for="exampleCheck2">I accept the terms</label>
                </div>


                <h4> <i class="fas fa-exclamation-circle"></i>@Session["TableEditError"]</h4>
                <button type="submit" class="btn btn-primary">Submit</button>
                <br />


                <br />
            </form>
        </div>

        <!--RIGHT SIDE-->
        <div class="col">
            <div class="row">

                @foreach (TableClass table in Model.Tables)
                {
                    <div class="col-lg-3">
                        <div class="card" style="width: 18rem;">
                            <img src="" class="card-img-top" alt="...">
