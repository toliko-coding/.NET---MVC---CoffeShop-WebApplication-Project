                                <h5 class="card-title">table</h5>
                                <p class="card-text">
                                    ID : @table.ID <br />
                                    Seats : @table.Seats <br />
                                    Discription : @table.Dicription <br />
                                    Free : @table.Free <br />
                                    Inside : @table.Inside <br />


                                </p>
                                <a href="#" class="btn btn-primary">Go somewhere</a>
                            </div>
                        </div>
                    </div>

                }
