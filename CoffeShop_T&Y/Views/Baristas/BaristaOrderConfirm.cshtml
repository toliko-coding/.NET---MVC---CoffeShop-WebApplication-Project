    <div class="card" style="margin-left:30%; margin-right:30%;">
        <div class="card-header">
            Featured
        </div>
        <div class="card-body">
            <h5 class="card-title">Hi  @Model.barista.Name , Your order confirmed for The Client @Model.client.Name </h5>
            <p class="card-text"> total price : @Model.order.TotalPrice , Table number : @Model.order.TableID</p>
            <a href="~/Baristas/BaristaLogIn" class="btn btn-primary">Go Back Home</a>

            <form action="ReconectBarista" method="post">


                <input type="hidden" class="form-control" id="tableID" name="tableID" value="@Model.Table.ID">

                <input type="hidden" class="form-control" id="ClientID" name="ClientID" value="@Model.client.PhoneNumber">



                <input type="hidden" class="form-control" id="itemsList" name="itemsList" value="@Model.order.items">

                <input type="hidden" class="form-control" id="TotalPrice" name="TotalPrice" value="@Model.order.TotalPrice">


